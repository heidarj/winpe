<UserControl x:Class="PixieMenu.PixieMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PixieMenu"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    <Grid>
        <ScrollViewer Name="scrollPanel" VerticalScrollBarVisibility="Auto">
            <WrapPanel Name="wrapPanel" Margin="10,10,0,10"/>
        </ScrollViewer>
    </Grid>
</UserControl>
